{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Next.js: debug server-side",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/next",
      "runtimeArgs": [
        "dev"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "Next.js: debug client-side",
      "type": "chrome",
      "request": "attach",
      "port": 3000,
      "pathMapping": {
        "/": "${workspaceFolder}/",
        "/_next": "${workspaceFolder}/.next"
      }
    }
  ]
}
